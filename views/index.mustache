<!DOCTYPE html>
<html>
  <head>
    <title>Student Management</title>
  <style>
    /* Reset some default browser styles */
body, ul {
    margin: 0;
    padding: 0;
  }
  
  /* Set a background color */
  body {
    background-color: #f0f0f0;
    font-family: Arial, sans-serif;
    text-align: center;
  }
  
  /* Style the title */
  h1 {
    background-color: #333;
    color: #fff;
    padding: 10px;
  }
  
  /* Style form sections */
  h2 {
    margin-top: 20px;
  }
  
  /* Style forms */
  form {
    background-color: #fff;
    padding: 20px;
    margin: 10px auto;
    width: 80%;
    max-width: 400px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }
  
  /* Style form labels */
  label {
    display: block;
    margin: 10px 0;
    font-weight: bold;
  }
  
  /* Style input fields */
  input[type="text"],
  input[type="number"],
  input[type="email"] {
    width: 100%;
    padding: 10px;
    margin: 5px 0;
    border: 1px solid #ccc;
    border-radius: 3px;
  }
  
  /* Style submit buttons */
  button[type="submit"] {
    display: inline-block;
    background-color: #333;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 3px;
    cursor: pointer;
  }
  
  /* Style the student list */
  #studentsList {
    list-style: none;
    padding: 0;
    margin: 20px auto;
    width: 80%;
    max-width: 600px;
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }
  
  /* Style student list items */
  #studentsList li {
    padding: 10px;
    border-bottom: 1px solid #ccc;
  }
  
  /* Style links within student list items */
  #studentsList li a {
    text-decoration: none;
    color: #333;
    margin-left: 10px;
    font-weight: bold;
  }
  
  /* Style delete button for confirmation */
  #deleteStudentForm button[type="submit"] {
    background-color: #f00;
    color: #fff;
  }
  
  </style>
  
  
  </head>
  <body>
    <h1>Student Management</h1>

    <!-- Form for creating a new student -->
    <h2>Create a New Student</h2>
    <form id="createStudentForm" action="/students" method="POST">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required />
      <label for="age">Age:</label>
      <input type="number" id="age" name="age" required />
      <label for="gender">Gender:</label>
      <input type="text" id="gender" name="gender" required />
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required />
      <button type="submit">Create Student</button>
    </form>

    <!-- Form for updating a student -->
    <h2>Update Student</h2>
    <form id="updateStudentForm" action="/students/update" method="POST">
    <label for="updateStudentId">Student ID:</label>
      <input type="text" id="updateStudentId" name="updateStudentId" required />
      <label for="updatedName">Name:</label>
      <input type="text" id="updatedName" name="updatedName" required />
      <label for="updatedAge">Age:</label>
      <input type="number" id="updatedAge" name="updatedAge" required />
      <label for="updatedGender">Gender:</label>
      <input type="text" id="updatedGender" name="updatedGender" required />
      <label for="updatedEmail">Email:</label>
      <input type="email" id="updatedEmail" name="updatedEmail" required />
      <button type="submit">Update Student</button>
    </form>
<!-- Form for deleting a student -->
    <h2>Delete Student</h2>
    <form id="deleteStudentForm" action="/students/delete" method="POST">
      <label for="deleteStudentId">Student ID:</label>
      <input type="text" id="deleteStudentId" name="deleteStudentId" required />
      <button type="submit" onclick="return confirm('Are you sure you want to delete this student?')">Delete Student</button>
    </form>

    <!-- List of students with links for updating and deleting -->
    <h2>Students List</h2>
    <ul id="studentsList">
    {{#students}}
        <li>
          Name: {{name}}, Age: {{age}}, Gender: {{gender}}, Email: {{email}} id: {{_id}}
        </li>
        {{/students}}
      </ul>
  </body>
</html>
